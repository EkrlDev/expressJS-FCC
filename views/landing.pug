extends layout

block content
  h1= title
  p Welcome to #{title}
  form(action='/', method='POST')
    input(name="lead_email" type="email", placeholder="Type your email")
    button(type="submit") Submit
  if data
    h1 Leads
    for lead in data
      p(id=lead.id)
        span #{lead.email}
        | 
        a(href="/lead/"+lead._id) Details
        | 
        button(onclick=`deleteLead('${lead._id}')`) Delete
  script(src="https://code.jquery.com/jquery-3.2.1.min.js")
  script(src="/javascripts/leads.js")
  
  